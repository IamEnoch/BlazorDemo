@page "/"

<h1> Hey there @UserName </h1>
<button onclick="@(() => { UserName = "Enoch"; } )">Change Name</button>

@if (TestNum == 2)
{
    <p>Test Num is 1</p>
}
else
{
    <p>Test Num is not 1</p>
} 

@foreach (var name in names)
{
